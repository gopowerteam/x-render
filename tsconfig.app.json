{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "packages/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "packages/**/__tests__/*",
    "node_modules/**"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "jsxFactory": "h",
    "skipLibCheck": true,
  },
}
